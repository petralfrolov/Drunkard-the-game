<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/table">


    <TextView android:id="@+id/yourDeck"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"

              android:layout_marginLeft="10dp"

              android:textSize="25dp"
              android:textColor="#FFFFFF"
    />
    <TextView android:id="@+id/yourCard"

              android:layout_width="fill_parent"
              android:layout_height="wrap_content"

              android:layout_marginLeft="10dp"

              android:textSize="25dp"
              android:textColor="#FFFFFF"
    />
    <TextView android:id="@+id/enemyCard"

              android:layout_width="fill_parent"
              android:layout_height="wrap_content"

              android:layout_marginLeft="10dp"

              android:textSize="25dp"
              android:textColor="#FFFFFF"
    />
    <TextView android:id="@+id/enemyDeck"

              android:layout_width="fill_parent"
              android:layout_height="wrap_content"

              android:layout_marginLeft="10dp"

              android:textSize="25dp"
              android:textColor="#FFFFFF"
    />
    <Button android:id="@+id/turn"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"

            android:text="Start turn"
            android:textSize="30dp"
    />
    <Button android:id="@+id/surrender"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"

            android:text="Surrender"
            android:textSize="30dp"
    />

</LinearLayout>