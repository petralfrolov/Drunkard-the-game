<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"

        android:background="@drawable/table"
        android:weightSum="5">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">

        <ImageView android:id="@+id/enemyDeck1"
                   android:layout_width="100dp"
                   android:layout_height="72dp"
                   android:layout_gravity="center_horizontal">

        </ImageView>

        <TextView android:id="@+id/enemyDeckSize"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

                  android:layout_marginLeft="10dp"

                  android:textSize="25dp"
                  android:textColor="#FFFFFF"
                  app:fontFamily="@font/vt323"
        />

    </FrameLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"

                android:text="Enemy card: "
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                app:fontFamily="@font/vt323"
        />

        <ImageView android:id="@+id/enemyCardView"
                   android:layout_width="107dp"
                   android:layout_height="150dp"

                   android:layout_gravity="center_horizontal"
        />

    </FrameLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">

        <TextView android:id="@+id/yourCard"

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:layout_marginLeft="10dp"

                  android:text="Your card: "
                  android:textSize="25dp"
                  android:textColor="#FFFFFF"
                  app:fontFamily="@font/vt323"
        />

        <ImageView android:id="@+id/yourCardView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:scaleType="fitXY"

                   android:layout_gravity="center_horizontal"
        />

    </FrameLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">

        <ImageView android:id="@+id/yourDeck1"
                   android:layout_width="100dp"
                   android:layout_height="72dp"
                   android:layout_gravity="center_horizontal">

        </ImageView>


        <TextView android:id="@+id/yourDeckSize"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

                  android:layout_marginLeft="10dp"

                  android:textSize="25dp"
                  android:textColor="#FFFFFF"
                  app:fontFamily="@font/vt323"
        />
    </FrameLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"

                  android:orientation="horizontal"
                  android:weightSum="2">

        <Button android:id="@+id/turn"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_margin="10dp"

                android:text="Start turn"
                android:textSize="30dp"
                app:fontFamily="@font/vt323"
        />
        <Button android:id="@+id/surrender"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_margin="10dp"

                android:text="Surrender"
                android:textSize="30dp"
                app:fontFamily="@font/vt323"
        />
    </LinearLayout>

</LinearLayout>