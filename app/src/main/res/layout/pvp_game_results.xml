<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_animated"
    />

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            android:background="@drawable/table_animated">

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="1dp"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:weightSum="3">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                          android:layout_weight="1">

            </LinearLayout>

            <TextView android:layout_width="1dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="Game over"
                      android:layout_weight="1"
                      android:textSize="100sp"
                      android:textColor="#FFFFFF"
                      app:fontFamily="@font/vt323"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:orientation="horizontal"
                      android:weightSum="2"
                      android:layout_weight="1">
            <TextView android:id="@+id/gameEndTextView1"
                      android:layout_width="1dp"
                      android:layout_height="fill_parent"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:textSize="100sp"
                      android:textColor="#FFFFFF"
                      app:fontFamily="@font/vt323"
            />
            <TextView android:id="@+id/gameEndTextView2"
                      android:layout_width="1dp"
                      android:layout_height="fill_parent"
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:textSize="100sp"
                      android:textColor="#FFFFFF"
                      app:fontFamily="@font/vt323"
            />
        </LinearLayout>


        <Button android:id="@+id/toMenuButtonPVP"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Back to Menu"
                android:textSize="70sp"
                app:fontFamily="@font/vt323"
        />
    </LinearLayout>

</RelativeLayout>