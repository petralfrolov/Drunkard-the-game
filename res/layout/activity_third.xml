<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
            android:text="Ваша колода: "
            android:textSize="25dp"
              android:layout_above="@id/button_start_turn"
            android:id="@+id/yourDeck"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Ваша карта:"
              android:textSize="25dp"
              android:layout_above="@id/yourDeck"
              android:id="@+id/yourCard"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Карта противника: "
              android:textSize="25dp"
              android:layout_below="@id/enemyDeck"
              android:id="@+id/enemyCard"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Колода противника: "
              android:textSize="25dp"
              android:id="@+id/enemyDeck"
              android:layout_below="@id/button_sdatsa"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сдаться"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/button_sdatsa"
            android:onClick="movemenu"
            android:textSize="20dp"

    />

    <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ходить"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:id="@+id/button_start_turn"
            android:layout_alignParentBottom="true"
    />
</RelativeLayout>
</LinearLayout>